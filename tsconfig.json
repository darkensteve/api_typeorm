{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",  // Points to the root directory
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["./**/*.ts"], // Include all TypeScript files in root and subdirectories
    "exclude": ["node_modules"] // Exclude node_modules
}
